{
  "name": "ianwremmel.com",
  "description": "Personal website of Ian W. Remmel",
  "version": "2.0.0",
  "author": "Ian Remmel <1182361+ianwremmel@users.noreply.github.com>",
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.4.3",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "bootstrap": "^5.1.3",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all --continue-on-error build:*",
    "build:css": "sass --load-path . ./app/styles/index.scss ./app/root.css",
    "build:remix": "remix build",
    "dev": "npm-run-all --continue-on-error --parallel dev:*",
    "dev:css": "sass --watch --load-path . ./app/styles/index.scss ./app/root.css",
    "dev:remix": "cross-env NODE_ENV=development netlify dev",
    "eslint": "eslint ${ESLINT_FORMAT_OPTIONS:-} --ignore-path .gitignore ",
    "lint": "npm-run-all --continue-on-error --parallel lint:*",
    "lint:changelog": "commitlint --from origin/master --to HEAD",
    "prelint:es": "mkdirp reports/style",
    "lint:es": "npm run --silent eslint -- .",
    "prelint:types": "mkdirp reports/style",
    "lint:types": "bash -c \"tsc $TSC_OPTIONS\"",
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production netlify dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@ianwremmel/eslint-plugin-ianwremmel": "^6.0.0",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/node": "^14",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mkdirp": "^1.0.4",
    "netlify-cli": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "typescript": "^4.6.4"
  },
  "private": true,
  "lint-staged": {
    "*.js": "npm run eslint -- ",
    "*.ts": "npm run eslint -- ",
    "*.tsx": "npm run eslint -- "
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "14",
    "npm": ">=7"
  },
  "sideEffects": false
}
